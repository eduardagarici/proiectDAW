@model proiectDAW.Models.Project
@{
    ViewBag.Title = "Edit";
    @Styles.Render("~/Content/project.css")
}

<div class="container">
    <div class="login-form">
        <div class="main-div">
            <div class="panel">
                <h2>Project Details</h2>
            </div>
            <form method="post" action="/Project/Edit/@Model.ProjectId" id="Login">
                @Html.HttpMethodOverride(HttpVerbs.Put)
                <div class="form-group">
                    <label style="">Name:</label>
                    <input required type="text" class="form-control" name="Name" placeholder="Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <textarea class="form-control" name="Description" placeholder="Description" value="@Model.Description"></textarea>
                </div>
                <div class="form-group">
                    <label>Deadline:</label>
                    <input required type="date" class="form-control" name="Deadline" placeholder="Deadline" value="@Model.Deadline" />
                </div>
                <div class="form-group">
                    <label>Deadline:</label>
                    @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Edit project</button>
            </form>
        </div>
    </div>
</div>



